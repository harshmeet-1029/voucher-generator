<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voucher Generated</title>
    <link rel="icon" type="image/x-icon" href="favicon.png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <script>
        function printPage() {
            window.print();
        }
    </script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <!-- Brand Name -->
            <a class="navbar-brand" href="#">Voucher Generator</a>

            <!-- Toggler Button for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Dashboard Link -->
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <!-- Settings Link -->
                    <li class="nav-item">
                        <a class="nav-link" href="/settings" title="Settings">
                            <i class="bi bi-gear"></i> Settings
                        </a>
                    </li>

                    <!-- Logout Link -->
                    <li class="nav-item">
                        <a class="nav-link" href="/logout" title="Logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="card shadow-lg p-4 container my-5 mt-3">
        <h1 class="text-center text-success">Voucher Generated Successfully!</h1>
        <hr>
        <p><strong>Code:</strong>
            <%= code %>
        </p>
        <p><strong>Generated Date:</strong>
            <%= generatedDate %>
        </p>
        <p><strong>Expiry Date:</strong>
            <%= expiryDate %>
        </p>
        <div class="text-center">
            <img src="<%= qrCode %>" alt="QR Code" class="img-fluid my-3" style="max-width: 200px;">
        </div>
        <div class="text-center">
            <a href="/dashboard/export-pdf/<%= code %>"><button class="btn btn-primary ">Export as
                    PDF</button></a>
            <a href="javascript:void(0)" class="btn btn-primary me-1" onclick="printVoucher('<%= code %>')">
                Print
            </a>
            <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>
    <script>
        function printVoucher(voucherCode) {
            fetch(`/dashboard/print-voucher/${voucherCode}`)
                .then((response) => response.json())
                .then((data) => {

                    // Create a Blob from the base64 string
                    const pdfBlob = base64ToBlob(data.base64PDF, 'application/pdf');
                    const url = URL.createObjectURL(pdfBlob);

                    // Create an invisible iframe to open the PDF
                    const iframe = document.createElement('iframe');
                    iframe.style.position = 'absolute';
                    iframe.style.width = '0';
                    iframe.style.height = '0';
                    iframe.src = url;
                    document.body.appendChild(iframe);

                    // Trigger the print dialog
                    iframe.contentWindow.print();
                })
                .catch((error) => {
                    console.log('error: ', error);
                    console.error('Error printing voucher:', error);
                    alert('Failed to print voucher');
                });
        }

        function base64ToBlob(base64, type) {
            const byteCharacters = atob(base64);
            const byteNumbers = new Array(byteCharacters.length);
            for (let i = 0; i < byteCharacters.length; i++) {
                byteNumbers[i] = byteCharacters.charCodeAt(i);
            }
            const byteArray = new Uint8Array(byteNumbers);
            return new Blob([byteArray], { type: type });
        }
    </script>
</body>

</html>