<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <link rel="icon" type="image/x-icon" href="favicon.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style2.css">
    <!-- Toastify Library -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <!-- Custom Toast Handler -->
    <script src="/js/toast-handler.js"></script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Voucher Generator</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link d-flex" href="/"><span class="material-icons">dashboard</span> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active d-flex" href="/settings" title="Settings"><span
                                class="material-icons">settings</span> Settings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex" href="/logout" title="Logout"><span
                                class="material-icons">logout</span>
                            Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="container mt-5">
        <h1>Settings</h1>
        <form action="/settings/update" method="POST">
            <div class="mb-3">
                <label for="maxExpiryDays" class="form-label">Maximum Expiry Days</label>
                <input type="number" name="maxExpiryDays" id="maxExpiryDays" class="form-control"
                    value="<%= settings.maxExpiryDays %>" required>
            </div>
            <div class="mb-3">
                <label for="voucherWidth" class="form-label">Voucher Width (mm)</label>
                <input type="number" name="voucherWidth" id="voucherWidth" class="form-control"
                    value="<%= settings.voucherWidth %>" required>
            </div>
            <div class="mb-3">
                <label for="voucherHeight" class="form-label">Voucher Height (mm)</label>
                <input type="number" name="voucherHeight" id="voucherHeight" class="form-control"
                    value="<%= settings.voucherHeight %>" required>
            </div>
            <div class="mb-3">
                <label for="titleFontSize" class="form-label">Title Font Size</label>
                <input type="number" name="titleFontSize" id="titleFontSize" class="form-control"
                    value="<%= settings.titleFontSize %>" required>
            </div>
            <div class="mb-3">
                <label for="normalFontSize" class="form-label">Normal Font Size</label>
                <input type="number" name="normalFontSize" id="normalFontSize" class="form-control"
                    value="<%= settings.normalFontSize %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Save Settings</button>
        </form>
    </div>

    <% if (error==false) { %>
        <script>
            showToast('<%= message %>', 'success');
            setTimeout(function () {
                window.location.href = '/dashboard'; // Redirect to the dashboard after 3 seconds
            }, 1000); // 3000 milliseconds = 1 second
        </script>
        <% } else if (error) { %>
            <script>
                showToast('<%= message %>', 'error');
            </script>
            <% } %>


                <!-- Bootstrap JS -->
                <script
                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>