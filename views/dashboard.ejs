<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="icon" type="image/x-icon" href="favicon.png">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <!-- Brand Name -->
            <a class="navbar-brand" href="#">Voucher Generator</a>

            <!-- Toggler Button for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Dashboard Link -->
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <!-- Settings Link -->
                    <li class="nav-item">
                        <a class="nav-link" href="/settings" title="Settings">
                            <i class="bi bi-gear"></i> Settings
                        </a>
                    </li>

                    <!-- Logout Link -->
                    <li class="nav-item">
                        <a class="nav-link" href="/logout" title="Logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <!-- Dashboard Header -->
        <div class="text-center mb-2">
            <h1 class="display-5">Dashboard</h1>
        </div>

        <!-- QR Code Generator Card -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-3">Generate QR Code</h4>
                        <form action="/dashboard/generate" method="POST">
                            <button type="submit" class="btn qr-button">Generate QR Code</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Existing Vouchers Section -->
        <div class="row mt-5 justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 mb-3">
                    <div class="card-body ">
                        <h4 class="card-title mb-3">Existing Vouchers</h4>
                        <div class="vouchers-list">
                            <% if (vouchers.length> 0) { %>
                                <ul class="vouchers-list-group list-group">
                                    <% vouchers.forEach(voucher=> { %>
                                        <li
                                            class="list-group-item p-2  d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>Code:</strong>
                                                <%= voucher.code %> <br>
                                                    <small>
                                                        <strong>Generated:</strong>
                                                        <%= voucher.generated_date %> |
                                                            <strong>Expiry:</strong>
                                                            <%= voucher.expiry_date %>
                                                    </small>
                                            </div>
                                            <div>
                                                <a href="/dashboard/export-pdf/<%= voucher.code %>"
                                                    class="btn btn-sm btn-outline-success me-2">
                                                    Export as PDF
                                                </a>
                                                <a href="javascript:void(0)" class="btn btn-sm btn-outline-primary"
                                                    onclick="printVoucher('<%= voucher.code %>')">
                                                    Print
                                                </a>
                                            </div>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } else { %>
                                    <div class="text-center text-muted">No vouchers available.</div>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function printVoucher(voucherCode) {
            fetch(`/dashboard/print-voucher/${voucherCode}`)
                .then((response) => response.json())
                .then((data) => {
                    
                    // Create a Blob from the base64 string
                    const pdfBlob = base64ToBlob(data.base64PDF, 'application/pdf');
                    const url = URL.createObjectURL(pdfBlob);

                    // Create an invisible iframe to open the PDF
                    const iframe = document.createElement('iframe');
                    iframe.style.position = 'absolute';
                    iframe.style.width = '0';
                    iframe.style.height = '0';
                    iframe.src = url;
                    document.body.appendChild(iframe);

                    // Trigger the print dialog
                    iframe.contentWindow.print();
                })
                .catch((error) => {
                    console.log('error: ', error);
                    console.error('Error printing voucher:', error);
                    alert('Failed to print voucher');
                });
        }

        function base64ToBlob(base64, type) {
            const byteCharacters = atob(base64);
            const byteNumbers = new Array(byteCharacters.length);
            for (let i = 0; i < byteCharacters.length; i++) {
                byteNumbers[i] = byteCharacters.charCodeAt(i);
            }
            const byteArray = new Uint8Array(byteNumbers);
            return new Blob([byteArray], { type: type });
        }
    </script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>